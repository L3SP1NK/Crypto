#!/bin/bash
## GCP-NC: Get crypto prices, no colors.
## Copy of  the "gcp" script, without colors.

## Get the prices of the most popular cryptocurrencies.

## Data from:
## - Binance
## - Kraken
## - Coinbase

DATE=$(date "+%A %d %B %Y, %T")
COINBASE_URL="https://api.coinbase.com/v2/prices/"
KRAKEN_URL='https://api.kraken.com/0/public/Ticker?pair='
BSC_URL='https://api.bscscan.com/api?module=stats&action=bnbprice&apikey='
## Binance Smart Chain API key, get one at https://bscscan.com/apis
BSC_API="CQ21TRV2YCQ3WV9EA4TSR5BRD12P2TDG16"

BTC()
{
		## Bitcoin (Coinbase).
#		echo "ðŸŸ  BTC: \$$(curl -s ${COINBASE_URL}BTC-USD/buy \
#		| cut -d\: -f5 \
#		| cut -d\" -f2)" \
#		| cut -d '.' -f 1

		## Bitcoin (Kraken).
		echo "ðŸŸ  BTC: \$$(curl -s "${KRAKEN_URL}BTCUSD" \
		| jq \
		| awk "/a/ { getline; print ${1};}" \
		| sed 's/\("\s*\|,\)//g' \
		| sed 's/ //g' \
		| cut -d '.' -f 1 )"
}

ETH()
{
#		## Etherum (Coinbase).
#		echo "ðŸ”µ ETH: \$$(curl -s ${COINBASE_URL}ETH-USD/buy \
#		| cut -d\: -f5 \
#		| cut -d\" -f2)" \
#		| cut -d '.' -f 1

		## Etherum (Kraken).
		echo "ðŸ”µ ETH: \$$(curl -s "${KRAKEN_URL}ETHUSD" \
		| jq \
		| awk "/a/ { getline; print ${1};}" \
		| sed 's/\("\s*\|,\)//g' \
		| sed 's/ //g' \
		| cut -d '.' -f 1 )"
}

XMR()
{
		## Monero (Kraken).
		echo "âšªï¸ XMR: \$$(curl -s "${KRAKEN_URL}XMRUSD" \
		| jq \
		| awk "/a/ { getline; print ${1};}" \
		| sed 's/\("\s*\|,\)//g' \
		| sed 's/ //g' \
		| cut -d '.' -f 1 )"
}

BNB()
{
		## Binance coin (Binance Smart Chain).
		echo "ðŸŸ¡ BNB: \$$(curl -s "${BSC_URL}${BSC_API}" \
		| cut -d ',' -f 5 \
		| cut -d : -f 2 \
		| sed 's/"//g' \
		| cut -d '.' -f 1 )"
}

REQUIREMENTS="curl perl awk sed jq"
if ! which ${REQUIREMENTS} > /dev/null
	then
		echo -e "${WARN} To run this program, you need the following packages installed: ${REQUIREMENTS}\n${WARN} Exiting..."
		exit 1
fi

echo -e "${DATE}\n"
BTC
ETH
XMR
BNB
